{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["node_modules", "dist", "build", ".vscode"]
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 100,
        "indentWidth": 4,
        "lineEnding": "lf",
        "indentStyle": "space",
        "formatWithErrors": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
